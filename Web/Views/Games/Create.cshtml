@model Mackowiak.GameCatalog.Web.Models.GameViewModel

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre" class="control-label"></label>
        @Html.DropDownListFor(model => model.Genre, Model.AvailableGenres, "Wybierz gatunek", new { @class = "form-control" })
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeveloperId" class="control-label"></label>
        @Html.DropDownListFor(model => model.DeveloperId, Model.AvailableDevelopers, "Wybierz producenta", new { @class = "form-control" })
        <span asp-validation-for="DeveloperId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>