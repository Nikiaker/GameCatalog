@model Mackowiak.GameCatalog.DAO.Models.Game

@{
    ViewData["Title"] = "Create";
}

<h2>Dodaj produkt</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Nazwa</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genre" class="control-label"></label>
        @Html.DropDownListFor(game => game.Genre, (IEnumerable<SelectListItem>)ViewBag.Genres, "Wybierz gatunek", new { @class = "form-control" })
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Deweloper</label>
        <input asp-for="Developer.Name" class="form-control" />
        <span asp-validation-for="Developer.Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>
